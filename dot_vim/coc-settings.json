{
  "python.pythonPath": "python3",
  "coc.source.iced.enable": true,
  "diagnostic-languageserver.linters": {
    "clj_kondo_lint": {
      "command": "clj-kondo",
      "debounce": 100,
      "args": [ "--lint", "%filepath"],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "clj-kondo",
      "formatLines": 1,
      "formatPattern": [
        "^[^:]+:(\\d+):(\\d+):\\s+([^:]+):\\s+(.*)$",
        {
          "line": 1,
          "column": 2,
          "message": 4,
          "security": 3
        }
      ],
      "securities": {
        "error": "error",
        "warning": "warning",
        "note": "info"
      } 

    }
  },
  "diagnostic-languageserver.filetypes": {"clojure":"clj_kondo_lint"},
  "languageserver": {
    "turtle": {
      "command": "/home/fatz/.nvm/versions/node/v12.22.6/bin/turtle-language-server",
      "args": ["--stdio"],
      "filetypes": ["turtle"],
    }
  }
}
